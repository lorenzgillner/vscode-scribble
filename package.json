{
	"name": "scribble",
	"displayName": "ScRibBle",
	"description": "A Geany-like scratchpad for VS Code",
	"icon": "./resources/icon.png",
	"version": "0.0.2",
	"publisher": "lorenzgillner",
	"private": true,
	"license": "MIT",
	"homepage": "https://github.com/lorenzgillner/vscode-scribble",
	"repository": {
		"type": "git",
		"url": "https://github.com/lorenzgillner/vscode-scribble.git"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"keywords": [
		"ui",
		"scribble",
		"scratchpad",
		"notes"
	],
	"activationEvents": [
		"onStartupFinished",
		"onWebviewPanel:scribble"
	],
	"main": "./out/extension.js",
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": "false"
		}
	},
	"contributes": {
		"viewsContainers": {
			"panel": [
				{
					"id": "scribble",
					"title": "Scribble",
					"icon": "$(note)"
				}
			]
		},
		"views": {
			"scribble": [
				{
					"type": "webview",
					"id": "scribble.scribbleView",
					"name": "Scribble"
				}
			]
		},
		"commands": [
			{
				"command": "scribble.saveScribble",
				"category": "Scribble",
				"title": "Save scribble"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "^20.6.0",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"eslint": "^8.32.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"fs": "^0.0.1-security"
	}
}
